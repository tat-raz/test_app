<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity5">



    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="64dp"
        android:background="@drawable/EditTextStyle"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:background="@drawable/EditTextStyle"
        android:inputType="textPersonName"
        android:text="@string/name" />

    <EditText
        android:id="@+id/user_lastname"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="@drawable/EditTextStyle"
        android:inputType="textPersonName"
        android:text="@string/last_name" />

    <EditText
        android:id="@+id/user_surname"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_below="@+id/user_lastname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:background="@drawable/EditTextStyle"
        android:inputType="textPersonName"
        android:text="@string/sur_name" />

    <EditText
        android:id="@+id/phone_begin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/user_surname"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/EditTextStyle"
        android:text="+7" />

    <EditText
        android:id="@+id/phone_end"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_below="@+id/user_surname"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:background="@drawable/EditTextStyle"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_below="@+id/phone_end"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/EditTextStyle"
        android:text="@string/email" />

    <EditText
        android:id="@+id/login"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/EditTextStyle"
        android:text="@string/login" />

    <EditText
        android:id="@+id/password"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/EditTextStyle"
        android:text="@string/password" />

    <EditText
        android:id="@+id/password_again"
        android:layout_width="345dp"
        android:layout_height="48dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/EditTextStyle"
        android:text="@string/password_again" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_again"
        android:layout_marginTop="15dp"
        android:background="@color/colorButtom"
        android:text="Зарегистрироваться" />

</RelativeLayout>